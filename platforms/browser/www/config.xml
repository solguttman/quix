<?xml version='1.0' encoding='utf-8'?>
<widget id="com.evelt.quix" version="1.1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Quix</name>
    <description>
        Quix.
    </description>
    <author email="support@evelt.com" href="https://evelt.com">
        Evelt Team
    </author>
    <content src="index.html" />
    <config-file parent="/manifest" platform="android">
        <application android:theme="@android:style/Theme.Light.NoTitleBar" />
    </config-file>
    <icon src="icon.png" />
    <splash src="splash.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>Use your camera to take a snap or video of your issue so we can understand your problem better.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Upload an image or video of your issue so we can understand your problem better.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSMicrophoneUsageDescription">
        <string>Record a voice note of your issue so we can understand your problem better.</string>
    </edit-config>
    <preference name="phonegap-version" value="cli-7.0.1" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
